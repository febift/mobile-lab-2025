<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for rounded corner images -->
    <style name="RoundedImageView">
        <item name="cornerSize">4dp</item>
    </style>
    <style name="GenreChip.Dark" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="chipMinHeight">36dp</item>  <!-- Slightly taller -->
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="rippleColor">#30BB86FC</item>

    </style>


    <style name="ShapeAppearanceOverlay.SearchBar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>



</resources>