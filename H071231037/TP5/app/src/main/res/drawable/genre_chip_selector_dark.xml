<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#BB86FC"/>  <!-- Purple accent -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#BB86FC"/>
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#6200EE"/>  <!-- Slightly darker purple -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#BB86FC"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2D2D2D"/>  <!-- Dark gray -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#424242"/>  <!-- Border color -->
        </shape>
    </item>
</selector>